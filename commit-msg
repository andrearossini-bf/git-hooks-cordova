#!/usr/bin/env bash
set -euo pipefail

REPO_ROOT="$(git rev-parse --show-toplevel)"
HOOK_ROOT="$REPO_ROOT/tools/git-hooks-cordova"

echo "[git-hooks-cordova] commit-msg hook"

exec pre-commit run \
  --config "$HOOK_ROOT/.pre-commit-config.yaml" \
  --hook-stage commit-msg \
  --commit-msg-filename "$1"
